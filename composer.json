{
  "name": "djigir/laravel-form-builder",
  "description": "A Laravel form builder package similar to FormCollective with essential form building functionality",
  "keywords": ["laravel", "form", "html", "forms", "form-builder"],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Dmitriy Djigir",
      "email": "dmitry.dm2000@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "illuminate/support": "^11.0|^12.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0|^11.0",
    "orchestra/testbench": "^9.0|^10.0"
  },
  "autoload": {
    "psr-4": {
      "Djigir\\LaravelFormBuilder\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Djigir\\LaravelFormBuilder\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Djigir\\LaravelFormBuilder\\FormServiceProvider"
      ],
      "aliases": {
        "Form": "Djigir\\LaravelFormBuilder\\Facades\\Form"
      }
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}